    {
      "parameters": {
        "jsCode": "// Normaliza a entrada do usu√°rio e cria o campo 'queue'\nconst itemsOut = [];\n\nfor (const item of items) {\n  let text = item.json.queue_raw || '';\n\n  // Remove espa√ßos nas extremidades\n  text = text.trim();\n\n  // Normaliza acentua√ß√£o (remove acentos)\n  text = text.normalize('NFD').replace(/[\\u0300-\\u036f]/g, '');\n\n  // Converte para min√∫sculas\n  text = text.toLowerCase();\n\n  // Remove espa√ßos duplicados\n  text = text.replace(/\\s+/g, ' ');\n\n  // Remove espa√ßos antes/depois da v√≠rgula\n  text = text.replace(/\\s*,\\s*/g, ',');\n\n  // Separa cidade e UF (se fornecido)\n  const parts = text.split(',');\n  const cidade = parts[0] ? parts[0].trim() : '';\n  const uf = parts[1] ? parts[1].trim() : '';\n\n  // Monta o par√¢metro 'queue' no formato esperado pela OpenWeather\n  // Sempre inclui ',BR' para reduzir ambiguidades\n  const queue = cidade ? `${cidade},BR` : '';\n\n  item.json.queue = queue;\n  item.json.cidade_input = cidade;\n  item.json.uf_input = uf;\n\n  itemsOut.push(item);\n}\n\nreturn itemsOut;"
      },
